<%- include('partials/header.ejs'); -%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lemon&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./styles.css" />
    <title>SunORain</title>
  </head>
  <body>
    <% temperatureValue = Math.round(weatherData.main.temp - 273.15) %>
    
    <div class="weatherContainer">
      <div class="weatherTextAndImage">
        <h2>Weather Report for <%= weatherData.name %></h2>
        <% switch (true) { 
          case temperatureValue <= 0: %>
          <img id="weatherImage" src="/lessThan0.png" alt="image of weather icon matching the temperature shown" />
        <% break; 
        
          case temperatureValue <= 10: %>
          <img id="weatherImage" src="/1to10.png" alt="image of weather icon matching the temperature shown" />
          <% break; 
          
          case temperatureValue <= 20: %>
          <img id="weatherImage" src="/11to20.png" alt="image of weather icon matching the temperature shown" />
          <% break; 
          
          case temperatureValue <= 30:%>
          <img id="weatherImage" src="/21to30.png" alt="image of weather icon matching the temperature shown" />
          <% break; 
          
          default: %>
          <img id="weatherImage" src="/above30.png" alt="image of weather icon matching the temperature shown" />
        <% } %>
      </div>


      <div class="weatherTemperature">
        <h3>Temperature:</h3>
        <h3><%=temperatureValue%>Â°C</h3>

        <% switch (true) { 
          case temperatureValue <= 0: %>
            <h4 class="funWeatherText">Bundle up like a burrito and stay toasty! It's frosty out there.</h4>
        <% break; 
        
          case temperatureValue <= 10: %>
          <h4 class="funWeatherText">Chill vibes only! Embrace the cool breeze and enjoy the day.</h4>
          <% break; 
          
          case temperatureValue <= 20: %>
          <h4 class="funWeatherText">Get ready for some vitamin D therapy! The sun's out, smiles on!</h4>
          <% break; 
          
          case temperatureValue <= 30:%>
          <h4 class="funWeatherText">Sun's out, shades on! It's a beach day in the making.</h4>
          <% break; 
          
          default: %>
          <h4 class="funWeatherText">Feeling the heat? Stay cool and hydrated, folks.</h4>
        <% } %>
      </div>
    </div>
  </body>
</html>
